package zweiteHausuebung.WennUnterprogramme;

import java.util.Scanner;

public class c_Anrede {
	/* 
	 Aufgabe:
	 3.Anrede: Sie übergeben einer Methode(mit Rückgabewert) Ihren Namen sowie das dazugehörige Geschlecht(Datentyp?), 
	 daraufhin werden Sie entsprechend begrüßt.
	Die Antwort ist die Ausgabe der richtigen Begrüßung Herr X, Frau Y, zudem gilt - 
	sollte der Vorname größer als der Nachname sein, dann soll zusätzlich hierfür eine Anmerkung ausgegeben werden. 
	Des Weiteren sind nur „gute“ Namen erlaubt, sowohl beim Vor- wie auch Nachnamen. 
	Gut ist definiert durch eine Zeichenanzahl von mindestens 3, sollte ein „kleinerer“ Name eingegeben werden, 
	wird entsprechend eine Anmerkung ausgegeben.
	Insgesamt soll dreimal dieselbe Methode ausgerufen werden, um jeden Anwendungsfall zu skizzieren.
	(Anrede normal, Anrede mit Hinweis das VN größer NM, Ausgabe: Anredeerstellung nicht möglich 
	weil VORNAME && || NACHNAME zu kurz.
	 */
	public static void main(String[] args) {
		Scanner s= new Scanner(System.in);
		
		String geschlecht;
		String vorName;
		String nachName;
		
		if (vorName.length()<=3 && nachName.length()<=3) {
			System.out.println("Anredeerstellung nicht möglich");
		}else {
			System.out.println(anredeUeberpruefung(geschlecht, vorName, nachName) );
		}

	}
	
	public static String anredeUeberpruefung(String g, String v, String n) {
		String anmerkung;
		String anrede="";
		if (g.equalsIgnoreCase("w")) {
			anrede="Frau ";
		}else {
			anrede="Herr ";
		}
		
		if (v.length()>n.length()) {
			anmerkung="Vorname ist größer als Nachname"+ anrede;
		}
		
		return anmerkung;
	}

}
