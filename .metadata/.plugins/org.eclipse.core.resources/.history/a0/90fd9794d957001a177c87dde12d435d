package zweiteHausuebung.Schleifen;

import java.util.Scanner;

public class k_ZweierPotenz {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int zahl;
		int teiler;
		

		System.out.print("Bitte Zahl eingeben: ");
		zahl = s.nextInt();
		
		teiler = zweierPotenz(zahl);
		
		System.out.println("Die größte Zweierpotenz von " + zahl + " ist: " + teiler);
		
		s.close();
	}
	
	public static int zweierPotenz (int number){
		int teiler;
		
		teiler = 1;
		while (number % teiler == 0)
		{
			teiler *= 2;
		}
		teiler /= 2;
		
		return teiler;
	}

}
