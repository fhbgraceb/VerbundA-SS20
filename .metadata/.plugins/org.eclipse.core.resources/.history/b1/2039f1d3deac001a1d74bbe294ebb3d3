package bernalPractice;

public class htvz_Vorkommen {
	public static void main(String[] args) {
		String stringa = "";
		String stringb = "";
		int anzahl;

		for (int i = 1; i <= 555; i++) {
			stringa += (char) (int) (Math.random() * ((int) 'Z' - (int) 'A' + 1) + (int) 'A');
		}
		for (int i = 1; i <= 11; i++) {
			stringb += (char) (int) (Math.random() * ((int) 'Z' - (int) 'A' + 1) + (int) 'A');
		}

		anzahl = vorkommen(stringa, stringb);

		System.out.println(anzahl);
	}

	public static int vorkommen(String suchString, String gesucht) {
		int anzahl = 0;

		for (int i = 0; i < gesucht.length(); i++) {
			for (int j = 0; j < suchString.length(); j++) {
				if (suchString.charAt(j) == gesucht.charAt(i)) {
					anzahl++;
				}
			}
		}

		return anzahl;
	}
}
