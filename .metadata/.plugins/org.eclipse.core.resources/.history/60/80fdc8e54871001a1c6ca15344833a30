package BernalHausuebung5;

public class d_Gauss {
	
	/*
	 4. Gauss: Berechnen Sie die Summe der Zahlen von 1 bis n mittels der
	Gauss’schen Summenformel. [4] 
	 */

	public static void main(String args[]) {
    	Scanner s = new Scanner(System.in);

    	int n;
    	int summe;
    	
    	System.out.print("Bitte n eingeben: ");
    	n = s.nextInt();

    	summe = gauss(n);
    	System.out.println("Die Summe von 1 bis " + n + " ist: " + summe);
    }
	
	public class Gauss {
		public static int gauss(int n){
			int ergebnis = 0;
			
			ergebnis = n * (n + 1) / 2;

			return ergebnis;
		}
	}
		

}
