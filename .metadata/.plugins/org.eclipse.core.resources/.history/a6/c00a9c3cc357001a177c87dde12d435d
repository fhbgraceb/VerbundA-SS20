package zweiteHausuebung.Schleifen;

import java.util.Scanner;

public class c_Ziffernsumme {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		
		int number;
		int reste;
		int ziffer;
		int ziffernsumme;
		
		System.out.print("Bitte eine Zahl eingeben: ");
		number = s.nextInt();
		reste = Math.abs(number);
		ziffernsumme = 0;
		while (reste > 0){
			ziffer = reste % 10;		
			ziffernsumme += ziffer;	
			reste = (reste - ziffer) / 10;	
		
			//console.log
			System.out.println("\n Reste: " + reste + "\n Ziffer: " + ziffer + "\n Ziffernsumme: " + ziffernsumme );
		}
		
		if (ziffernsumme % 3 == 0){
			System.out.println(number + " durch 3 teilbar.");
		}else{
			System.out.println(number + " NICHT durch 3 teilbar.");
		}

	}

}
