package bernalPractice;

public class htvz_A5Reihenbrueche {

	public static void main(String[] args) {
		boolean addieren=false;
		double summiert = 0;
		double glied = 0;
		
		for (double i = 1; i <= 12345; i++) {
			glied = (i+2)/i;
			if(addieren) {
				summiert += glied;
				System.out.println("plus (%d+2)/%d",i,i);
			}
			else {
				summiert -= glied;
				System.out.println("minus (%d+2)/%d",i,i);
			}
		
			if (i%3==0) {
				addieren=!addieren;
			}
		
		}
		
		System.out.println(summiert);
	}

}
