package dritteHausuebung;

public class Dreimusketiere {

	public static void main(String[] args) 
	{
		int anz = 0;
		int ath = 0;
		int por = 0;
		int ara = 0;
		int plaetze = 40;
		for (ath = 1;  ath <= 40; ath++)
		{
			for ( por = 1; por <= plaetze; por++) 
				{
					for ( ara = 1; ara <= plaetze; ara++)
					{
						if (ath!=por && ath != ara && ara !=por && (ath+1)!= por && (por+1)!= ath && ath !=1 && por != plaetze && ath!= plaetze && por != 1)    
						{
							anz = anz + 1;
						}
					}
				}
		}
		System.out.println("Alle möglichen Möglichkeiten wie Sie sitzen können: "+ anz);
	}
		
}


